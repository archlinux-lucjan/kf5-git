pkgname=syntax-highlighting-git
_pkgname=syntax-highlighting
pkgver=5.64.0.r1030.g1371441
pkgrel=1
pkgdesc='Syntax highlighting engine for structured text and code'
arch=('x86_64')
url='https://community.kde.org/Frameworks'
license=('GPL2')
depends=('qt5-base')
makedepends=('extra-cmake-modules' 'qt5-xmlpatterns' 'qt5-tools' 'qt5-doc' 'doxygen' 'git')
provides=('syntax-highlighting')
conflicts=('syntax-highlighting')
groups=('kf5-git')
source=("git://anongit.kde.org/$_pkgname.git")
sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  _ver="$(cat CMakeLists.txt | grep -m1 'set(KF5_VERSION' | cut -d '"' -f2 | tr - .)"
  echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}
   
prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${_pkgname} \
    -DBUILD_TESTING=OFF \
    -DQRC_SYNTAX=OFF \
    -DBUILD_QCH=ON
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}

# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kcoreaddons-git
_pkgname=kcoreaddons
pkgver=5.64.0.r883.ga798ca7
pkgrel=1
pkgdesc='Addons to QtCore'
arch=('x86_64')
url='https://community.kde.org/Frameworks'
license=('LGPL')
depends=('qt5-base')
makedepends=('extra-cmake-modules' 'qt5-tools' 'qt5-doc' 'qt5-doc' 'clang' 'python-pyqt5' 'doxygen' 'sip' 'git')
optdepends=('python-pyqt5: for the Python bindings')
provides=('kcoreaddons')
conflicts=('kcoreaddons')
groups=('kf5-git')
source=("git://anongit.kde.org/$_pkgname.git")
sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  _ver="$(cat CMakeLists.txt | grep -m1 'set(KF5_VERSION' | cut -d '"' -f2 | tr - .)"
  echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}
   
prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${_pkgname} \
    -D_KDE4_DEFAULT_HOME_POSTFIX=4 \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}

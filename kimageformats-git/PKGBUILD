# Contributor: Andrea Scarpino <andrea@archlinux.org>

pkgname=kimageformats-git
_pkgname=kimageformats
pkgver=5.35.0.r123.g7be2757
pkgrel=1
pkgdesc='Image format plugins for Qt5'
arch=('i686' 'x86_64')
url='https://community.kde.org/Frameworks'
license=('LGPL')
depends=('qt5-base' 'openexr')
makedepends=('extra-cmake-modules' 'karchive' 'mesa')
optdepends=('karchive: plugin for Krita and OpenRaster images')
provides=('kimageformats')
conflicts=('kimageformats')
groups=('kf5-git')
source=("git://anongit.kde.org/$_pkgname.git")
sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  _ver="$(cat CMakeLists.txt | grep -m5 'find_package(ECM'| grep -o "[[:digit:]]*" | paste -sd'.')"
  echo "${_ver}.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
}

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
